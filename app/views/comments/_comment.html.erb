<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<div class="container">
    <div class="row comment-fix">
        <div class="col-sm-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
              <%= image_tag comment.user.avatar, class: "img-circle avatar avatar-chatroom" %>
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <b><%= link_to comment.user.username.capitalize, comment.user %></b>
                            made a post.
                        </div>
                        <h6 class="text-muted time"><%= time_ago_in_words(comment.created_at) %> ago</h6>
                    </div>
                </div> 
                <div class="comment"> 
                    <p><%= comment.body.html_safe %></p>
                                    </div>

                    <!--<div class="stats">-->
                    <!--    <a href="#" class="btn btn-default stat-item">-->
                    <!--        <i class="fa fa-thumbs-up icon"></i>2-->
                    <!--    </a>-->
                    <!--    <a href="#" class="btn btn-default stat-item">-->
                    <!--        <i class="fa fa-thumbs-down icon"></i>12-->
                    <!--    </a>-->
                    <!--</div>-->
<% if logged_in? && (current_user == comment.user || current_user.admin?) %>
<%= link_to "Delete Comment", [comment.article, comment], method: :delete, remote: true, 
                                      data: { confirm: "Are you sure you want to delete this comment?" },
                                      class: "btn btn-xs btn-danger" %>     
                                      <% end %>
                 </div>
        </div>
    </div>
</div>