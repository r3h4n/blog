<h1>Edit Tutorial</h1>

<div class = "row">
  <div class = "col-md-12">
<%= form_for(@tutorial, multipart: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<%= f.select :category_id, @categories %>

  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :title %>
    </div>
    <div class ="col-md-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Name of post", autofocus: true %>
      
    </div>
  </div>
  <div class ="form-group">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class ="col-md-8">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Type type type" %>
    </div>
  </div>
    <div class ="form-group">
    <div class="control-label col-md-2">
      <%= f.label :author %>
    </div>
    <div class ="col-md-8">
      <%= f.text_field :author, rows: 10, class: "form-control", placeholder: "Type type type" %>
    </div>
  </div>
  
  <%= f.file_field :tutorial_img %>

  <div class = "form-group">
    <div class ="col-md-offset-2 col-md-10">
<%= f.submit :submit, class: "btn btn-primary btn-lg btn-x btn-xlarge"  %>
</div>
</div>
<div class ="col-md-4 col-md-offset-4 colormatch">
  [ <%=link_to "Return to Index", tutorials_path%> ]
</div>
<% end %>
</div>
</div>