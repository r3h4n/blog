<%= form_for(@tutorial, multipart: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<%= select_tag(:category_id, options_for_select( Category.all.map{ |c| [c.name, c.id] }
                                                ), :prompt => "Select a category") %>
                                                      <br/><br/>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: "Name of post", autofocus: true %><br/>
      
      <%= f.label :description %>
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Type type type" %><br/>
      
      <%= f.label :author %>
      <%= f.text_field :author, rows: 10, class: "form-control", placeholder: "Type type type" %> <br/>

  <%= f.file_field :tutorial_img %><br/>
<%= f.submit :submit, class: "btn-custom2"  %> <br/>

  <div align="center">[ <%=link_to "Return to Index", tutorials_path%> ]</div>
<% end %>
