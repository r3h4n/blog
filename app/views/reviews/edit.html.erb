<h1>Edit Review</h1>

<div class = "row">
  <div class = "col-md-12">
<%= form_for([@tutorial, @review])  do |f| %>

  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :rating %>
    </div>
    <div class ="col-md-8">
      <%= f.number_field :rating, class: "form-control", placeholder: "Name of post", autofocus: true %>
      
    </div>
  </div>
  <div class ="form-group">
    <div class="control-label col-md-2">
      <%= f.label :comment %>
    </div>
    <div class ="col-md-8">
      <%= f.text_area :comment, rows: 10, class: "form-control", placeholder: "Type type type" %>
    </div>
  </div>
  
   <div class = "form-group">
    <div class ="col-md-offset-2 col-md-10">
<%= f.submit :submit, class: "btn btn-primary btn-lg btn-x btn-xlarge"  %>
</div>
</div>

  <% end %>
  