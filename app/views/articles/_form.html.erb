<div class = "row">
  <div class = "col-md-12">
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :title %>
    </div>
    <div class ="col-md-8">
      <%= f.text_field :title, class: "form-control", placeholder: "Name of post", autofocus: true %>
      
    </div>
  </div>
  <div class ="form-group">
    <div class="control-label col-md-2">
      <%= f.label :text %>
    </div>
    <div class ="col-md-8">
      <%= f.trix_editor :text, rows: 10, class: "new-article", placeholder: "Type type type" %>
    </div>
  </div>
  <div class = "form-group">
    <div class ="col-md-offset-2 col-md-10">
<%= f.submit class: "btn btn-primary btn-lg btn-x btn-xlarge"  %>
</div>
</div>
<div class ="col-md-4 col-md-offset-4 colormatch">
  [ <%=link_to "Return to Index", articles_path%> ]
</div>
<% end %>
</div>
</div>