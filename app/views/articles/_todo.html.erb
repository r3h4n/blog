<% if logged_in? && current_user.admin? %> 
<input type="text" name="description"
       id="new_item" placeholder="New Item" />
       <% end %>
<div id='to_do_list_container'>
  <h3>
    To Do List
  </h3>
  <ul id='to_do_list'>
    <% for item in @undone_items do %>
      <%= render 'item', item: item %>
    <% end %>
  </ul>

  <h3>
    Done List
  </h3>
  <ul id='done_list'>
    <% for item in @done_items do %>
      <%= render "item", item: item %>
    <% end %>
  </ul>
</div>